<%= form_with(model: [@hotel, room]) do |form| %>

  <div>
    <%= form.label :room_code, style: "display: block" %>
    <%= form.text_field :room_code %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price_per_nigth, style: "display: block" %>
    <%= form.text_field :price_per_nigth %>
  </div>

  <div>
    <%= form.label :hotel_id, style: "display: block" %>
    <%= form.text_field :hotel_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
